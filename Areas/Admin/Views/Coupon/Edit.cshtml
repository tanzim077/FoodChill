@model Coupon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 class="text-info">Edit Coupon</h2>
<br />

<form method="post" enctype="multipart/form-data">
    <input asp-for="ID" type="hidden" />
    <div>
        <div class="col-12">
            @{
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
            }
            <img src="@imgsrc" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
        </div>

        <br />
        <div class="border backgroundWhite ">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>

            <div class="form-group row">

                <div class="col-2">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Picture" class="col-form-label"></label>
                </div>
                <div class="col-7">
                    <input type="file" id="projectImages" name="files" multiple class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CouponType" class="col-form-label">Type</label>
                </div>
                <div class="col-7">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MinimumAmount" class="col-form-label">Minimum Amount</label>
                </div>
                <div class="col-7">
                    <input asp-for="MinimumAmount" class="form-control" />
                </div>
                <span asp-validation-for="MinimumAmount"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Discount" class="col-form-label"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Discount" class="form-control" />
                </div>
                <span asp-validation-for="Discount"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="IsActive" class="col-form-label">Active</label>
                </div>
                <div class="col-7">
                    <input type="checkbox" asp-for="IsActive" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-8 offset-2">
                    <partial name="_EditAndBackToListPartial" model="Model.ID" />
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}