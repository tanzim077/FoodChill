@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Index</h1>

<br />
<br />
<div class="backgroundWhite">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Coupon List</h2>
        </div>

        <div class="col-3">
            <p>
                @*@Html.Partial("_CreateButtonPartial");*@
                <partial name="_CreateButtonPartial" />
            </p>
        </div>
    </div>

    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.MinimumAmount)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Discount)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.IsActive)</th>
                    </tr>
                </thead>


                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>

                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.MinimumAmount)</td>
                            <td>@Html.DisplayFor(m => item.Discount)</td>
                            <td>@Html.DisplayFor(m => item.IsActive)</td>
                            <td><partial name="TableButtonPartial" model="item.ID" /></td>

                        </tr>
                    </tbody>
                }

            </table>
        }
        else
        {
            <p>No Coupon Exists</p>
        }

    </div>
</div>