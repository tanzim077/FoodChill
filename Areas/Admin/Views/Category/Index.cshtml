@model IEnumerable<FoodChill.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="backgroundWhite">
    <div class="row">
        <div class="col-9">
            <h2>Category s List</h2>
        </div>

        <div class="col-3">
         <partial name="~/Views/Shared/_CreateButtonPartial.cshtml"/>
        </div>
    </div>

    <br /><br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m=>m.ID)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                        <th scope="col">Category</th>
                        <th scope="col"></th>
                    </tr>
                </thead>


                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>

                            <td>@Html.DisplayFor(m => item.ID)</td>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td></td>
                            <td>Edit | Delete | Details </td>
                        </tr>
                    </tbody>
                }

            </table>
        }
        else
        {
            <p>No Category Exists</p>
        }

    </div>
</div>