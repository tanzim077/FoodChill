@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="backgroundWhite">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Sub Category List</h2>
        </div>

        <div class="col-3">
            <p>
                @*@Html.Partial("_CreateButtonPartial");*@
                <partial name="_CreateButtonPartial" />

            </p>
        </div>
    </div>

    <br />

    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Sl. No</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Category.Name)</th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                @{int index = 1;}
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>

                            <td>@index</td>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Category.Name)</td>
                            <td><partial name="TableButtonPartial" model="item.ID" /></td>
                        </tr>
                        @{index++;}
                    </tbody>
                }
            </table>
        }
        else
        {
            <p>No Sub-Category Exists</p>
        }

    </div>
</div>